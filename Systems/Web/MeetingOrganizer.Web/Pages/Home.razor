@page "/"
@using Microsoft.AspNetCore.Authorization
@layout SimpleLayout
@inject NavigationManager navigationManager
<PageTitle>Meeting Organizer</PageTitle>

<MudContainer>
    <MudGrid Justify="Justify.Center" AlignItems="AlignItems.Center" Class="h-50">
        <MudItem>
            <MudText Typo="Typo.h1" Class="mb-4">Welcome to Meeting Organizer App!</MudText>
        </MudItem>
        <MudItem>
            <MudButton Variant="Variant.Filled" Color="Color.Primary" Size="Size.Large" @onclick="NavigateToRegister">Go to Register</MudButton>
        </MudItem>
        <MudItem>
            <MudButton Variant="Variant.Filled" Color="Color.Primary" Size="Size.Large" @onclick="NavigateToLogin">Go to Login</MudButton>
        </MudItem>
    </MudGrid>
</MudContainer>

@code {
    private void NavigateToRegister()
    {
        navigationManager.NavigateTo("/register");
    }

    private void NavigateToLogin()
    {
        navigationManager.NavigateTo("/login");
    }
}
